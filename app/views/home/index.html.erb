<h1>Calculadora de horas extras Sica</h1>
  <% n = 0 %>
<div>
    <%= form_tag calculadora_path, method: :post do %>
<table>
  <tr>
    <td>Citacion</td>
    <td>Salida</td>
    <td>50%</td>
    <td>100%</td>
  </tr>
  <% (0..6).each do |t|  %>
    <%= render partial: 'turno', locals: { n: t} %>
  <% end %>
</div>
  <div>
    <td>
      <input type="submit" value="Enviar" />
    </td>
  </div>
</table>
<% end %>
